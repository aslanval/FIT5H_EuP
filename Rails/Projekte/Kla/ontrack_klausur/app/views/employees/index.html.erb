<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Full name</th>
      <th>Username</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.vorname %></td>
        <td><%= employee.nachname %></td>
        <td><%= employee.name %></td>
        <td><%= employee.username %></td>
        <td><%= employee.project.title %></td>
        <td><%= link_to 'Show', project_employee_path( @project , employee) %></td>
        <td><%= link_to 'Edit', edit_project_employee_path( @project , employee ) %></td>
        <td><%= link_to 'Destroy', project_employee_path( @project , employee ) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_project_employee_path( @project ) %> | 
