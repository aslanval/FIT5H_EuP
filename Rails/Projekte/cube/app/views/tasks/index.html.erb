<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table> 
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Worker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.worker %></td>
        <td><%= link_to 'Show', worker_task_path(@worker.id, task.id) %></td>
        <td><%= link_to 'Edit', edit_worker_task_path(@worker.id, task.id) %></td>
        <td><%= link_to 'Destroy', worker_task_path(@worker.id, task.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_worker_task_path(@worker.id) %><br>
<%= link_to "Back to worker", worker_path(@worker.id) %>