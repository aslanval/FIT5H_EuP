<div class="container-fluid">
  <div class="page-header">
    <h2 class="text-center">LogIn</h2>
  </div>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
    <div class="jumbotron">
        <div class="row">
          <div class="col-md-4">
            <p><span class='glyphicon glyphicon-heart'></span> Hello, world!</p><br>
          </div>
          <div class="col-md-4">
          <%= form_tag(session_path) do %>
            <fieldset>
              <div class="form-group">
                <div class="medium-4 columns left_50">
                  <%= label_tag :email %>
                </div> 
                <div class="medium-4 columns text-center">
                  <%= email_field_tag :email, params[:email], autofocus: true %>
                </div>
              </div>
              <div class="form-group">
                <div class="medium-4 columns">
                </div>
                <div class="medium-4 columns left_50">
                  <%= label_tag :password %>
                </div>
                <div class="medium-4 columns text-center">
                  <%= password_field_tag :password, nil %>
                </div>
              </div>
              <div class="form-group">
                <div class="medium-4 columns">
                </div>
                <div class="medium-4 columns">
                </div>
                <div class="medium-4 columns left_50">
                  <%= submit_tag 'SignIn', :class => 'btn btn-primary'  %>
                </div>
              </div>
          <% end %>
          </div>
          <div class="col-md-4">
            <div class="left_50">
              <%= image_tag 'world.png' %>
            </div>
          </div>
        </div>
      <br>
        <h2 class="zitat">"The expert in anything was once a beginner." <small>- Helen Hayes</small></h2>
      </div>
    </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>