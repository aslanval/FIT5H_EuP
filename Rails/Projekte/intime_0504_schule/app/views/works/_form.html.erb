<%= form_for ([@user, @work]), :html => { :class => "form-horizontal work" } do |f| %>

  <% if @work.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @work.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :start, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :start, :include_seconds => true, :class => 'form-control' %>
    </div>
    <%=f.error_span(:start) %> 
  </div>
  <div class="form-group">
    <%= f.label :end, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :end, :include_seconds => true, :class => 'form-control' %>
    </div>
    <%=f.error_span(:end) %>
  </div> 
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_works_path(@user.id), :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
 