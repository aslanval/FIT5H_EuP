<%- model_class = Work -%>
<div class="container-fluid">
  <div class="page-header">
    <h2 class="text-center">Working Time <small>for <%= @user.prename %> <%= @user.lastname %></small></h2>
  </div>
  <div class="row"> 
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
        <dd><%= @user.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:starttime) %>:</strong></dt>
        <dd><%= @work.start.strftime("%d.%m.%Y %H:%M:%S") %></dd>
        <dt><strong><%= model_class.human_attribute_name(:endtime) %>:</strong></dt>
        <dd><%= @work.end.strftime("%d.%m.%Y %H:%M:%S") %></dd>
        <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
        <dd><%= time_view(@work.diff) %></dd>
      </dl>
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    user_works_path(@user.id), :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_user_work_path(@user.id,@work.id), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    user_work_path(@user.id,@work.id),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>