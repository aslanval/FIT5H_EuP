<%- model_class = Event -%> 
<div class="container-fluid">
  <div class="page-header">
    <h2 class="text-center">Departments<small></small></h2>
  </div>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8 grey">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.name.capitalize %></td>
              <td>
                <%= link_to t('.show', :default => t("helpers.links.details")),
                            department_path(department), :class => 'btn btn-default btn-xs' %>
                <% if current_user_moderator? %>
                  <%= link_to t('.edit', :default => t("helpers.links.rename")),
                            edit_department_path(department), :class => 'btn btn-default btn-xs' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            department_path(department),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if current_user_moderator? %>
        <%= link_to t('.new', :default => t("helpers.links.new department")),
                  new_department_path,
                  :class => 'btn btn-primary behindi' %>
      <% end %>
      <div class="bottom_50">
    </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>