<%- model_class = Work -%>
<div class="container-fluid">
  <div class="page-header">
    <h2 class="text-center">Department <small>Informations</small></h2>
  </div>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8"
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @department.name.capitalize %></dd>
        <dt><strong><%= model_class.human_attribute_name(:users) %> (<%= @department.users.count %>):</strong></dt>
        <% @department.users.each do |user| %>
          <dd>Prename: <%= user.prename.capitalize %>, Lastname: <%= user.lastname.capitalize %></dd>
        <% end %>
      </dl>
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    departments_path, :class => 'btn btn-default'  %>
      <% if current_user_moderator? %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_department_path(@department), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    department_path(@department),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>

